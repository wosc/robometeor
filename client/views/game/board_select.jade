template(name="boardselectPage")
  +head
  body
    +nav
    header
      .container
        .row
          .col-md-8
            +boardselect(game=game)
          .col-md-4.well
            +gamePageActions(game=game)
            +players(game=game)
    +footer


template(name="boardselect")
  .well
    h3 Select board
    hr.star-well
    ul.nav.nav-pills
      li.active(role='presentation')
        a(href='#beginner' role='pill' data-toggle='pill')
          | Beginner courses
      li(role='presentation')
        a(href='#expert' role='pill' data-toggle='pill')
          | Expert courses
    .tab-content
      .tab-pane.active(role='tabpanel' id='beginner')
        each beginnerBoards
          .boardchoice
            +thumbnail
      .tab-pane(role='tabpanel' id='expert')
        each expertBoards
          .boardchoice
            +thumbnail
    div(style="clear:both;")
